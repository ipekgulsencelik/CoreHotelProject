@model List<HotelProject.EntityLayer.Concrete.ContactMessage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar</h4>

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Mail</th>
                        <th>Ad Soyad</th>
                        <th>Konu</th>
                        <th>İçerik</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Mail</td>
                            <td>@item.NameSurname</td>
                            <td>@item.Subject</td>
                            <td>@item.MessageContent</td>
                            <td><label class="badge badge-danger">@item.IsActive</label></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
