@model List<HotelProject.EntityLayer.Concrete.Carousel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Carousel</h4>

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Resim</th>
                        <th>Açıklama</th>
                        <th>Başlık</th>
                      
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.CarouselID</td>
                            <td>@item.ImageURL</td>
                            <td>@item.Description</td>
                            <td>@item.Title</td>
                            <td><label class="badge badge-danger">@item.IsActive</label></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
